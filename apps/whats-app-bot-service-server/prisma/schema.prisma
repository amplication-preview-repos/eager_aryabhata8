datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model DigitalProduct {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  orders      Order[]
  price       Float?
  updatedAt   DateTime @updatedAt
}

model Order {
  createdAt        DateTime                 @default(now())
  deliveryMethod   EnumOrderDeliveryMethod?
  digitalProduct   DigitalProduct?          @relation(fields: [digitalProductId], references: [id])
  digitalProductId String?
  id               String                   @id @default(cuid())
  orderDate        DateTime?
  updatedAt        DateTime                 @updatedAt
  user             User?                    @relation(fields: [userId], references: [id])
  userId           String?
}

model User {
  createdAt   DateTime @default(now())
  email       String?  @unique
  firstName   String?
  id          String   @id @default(cuid())
  lastName    String?
  nationalId  String?
  orders      Order[]
  password    String
  phoneNumber String?
  roles       Json
  updatedAt   DateTime @updatedAt
  username    String   @unique
}

enum EnumOrderDeliveryMethod {
  Option1
}
